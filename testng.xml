<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Selenium Webdriver" verbose="1">


    <!--Global-->
    <parameter name="environment" value="dev"/>
    <!--<parameter name="environment" value="test"/>
    <parameter name="environment" value="staging"/>
    <parameter name="environment" value="production"/>-->

    <test name="Run on Firefox browser">
        <!--Local-->
        <parameter name="browser" value="firefox"/>
        <parameter name="version" value="120"/>

        <classes>
            <class name="webdriver.Topic_09_Paremeter"/>
        </classes>
    </test>

    <test name="Run on Chrome browser">
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="121"/>
        <classes>
            <class name="webdriver.Topic_09_Paremeter"/>
        </classes>
    </test>

    <test name="Run on Edge browser">
        <parameter name="browser" value="edge"/>
        <parameter name="version" value="122"/>
        <classes>
            <class name="webdriver.Topic_09_Paremeter"/>
        </classes>
    </test>

</suite>

